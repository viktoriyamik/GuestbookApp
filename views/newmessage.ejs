  <!DOCTYPE html>
  <html lang="en">
  <!-- Main title -->
  <title>Danish bread bakery</title>
  <!-- Declarations -->
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css" integrity="sha384-X38yfunGUhNzHpBaEBsWLO+A0HDYOQi8ufWDkZ0k9e0eXz/tH3II7uKZ9msv++Ls" crossorigin="anonymous">
  </head>
  
  <body>
  <!-- Nav-bar -->
    <div class="pure-menu pure-menu-horizontal">
      <a class="pure-menu-heading pure-menu-link">Danish bread bakery</a>
        <ul class="pure-menu-list">
          <li class="pure-menu-item">
            <a href="/" class="pure-menu-link">Home</a>
          </li>
          <li class="pure-menu-item">
            <a href="/newmessage" class="pure-menu-link">New Message</a>
        </li>
          <li class="pure-menu-item">
            <a href="/ajaxmessage" class="pure-menu-link">Ajax Message</a>
        </li>
        <li class="pure-menu-item">
          <a href="/guestbook" class="pure-menu-link">Guestbook</a>
      </li>
      </ul>
  </div>

<!-- Page main title -->
    <div class="container-fluid" style="margin-left: 50px; margin-top: 50px;">
        <h1>Write the message</h1>
<!-- Message form -->
      <form name="myform" class="pure-form pure-form-aligned" method="POST" action="/newmessage" onsubmit="return validateForm();" > 
        <fieldset>
          <div class="pure-control-group" style="margin-top:30px;">
            <label for="aligned-name">Name:</label>
            <input type="text" id="aligned-name" class="input-form" name="title" placeholder="Enter you name"/>
            <span id="span" class="pure-form-message-inline">This is a required field.</span>
          <div>
          <div class="pure-control-group">
			      <label for="aligned-country">Country:</label>
                <input type="text" name="country" class="input-form" id="aligned-country" placeholder="Enter your country"/>
                <span id="span" class="pure-form-message-inline">This is a required field.</span>
              </div>
          <div>
            <div class="pure-control-group">
              <label for="aligned-foo">Message:</label>
              <textarea name="content" class="input-form" type="text" id="aligned-foo" placeholder="Write your message here" rows="10"></textarea> 
              <span id="span" class="pure-form-message-inline">This is a required field.</span>    
            </div>
          </div>
          <div class="pure-controls">    
            <input type="submit" class="pure-button pure-button-primary" value="Send" />
          </div>
        </fieldset>
      </form>
    </div>

<!-- Footer -->
<div class="footer l-box is-center" style="margin-top: 50px;">
  <p>Danish bread bakery</p>
</div>

<!-- Validate form that fields not empty -->
<script type="text/javascript">
	function validateForm() {
  let x = document.forms["myform"]["title"].value;
    if (x == "") {
      alert("Name must be filled out");
    return false;
    }
      x = document.forms["myform"]["country"].value;
        if (x == "") {
        alert("Name must be filled out");
        return false;
        }
      x = document.forms["myform"]["content"].value;
         if (x == "") {
         alert("Message must be filled out");
         return false;
        }  
        alert("Your message is submitted!");
} 	
</script>

</body>

</html>