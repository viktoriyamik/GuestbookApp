<!DOCTYPE html>
<html lang="en">
<!-- App's main title -->
<title>Danish bread bakery</title>
<!-- Declarations -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/css/app.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
<!-- Nav-bar -->
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">Danish bread bakery</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/newmessage">New Message</a></li>
        <li class="active"><a href="/ajaxmessage">Ajax Message</a></li>
        <li><a href="/guestbook">Guestbook</a></li>
      </ul>
    </div>
  </nav> 
<!-- Page main title -->
    <div class="container">
        <h1>Enter new message</h1>
<!-- Message form -->
        <form name="myform" class="form-horizontal" id="searchForm" action="/ajaxmessage">
          <div class="form-group" id="form-group-top">
            <label class="control-label col-sm-2" id="label" for="title">Name:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="title" id="title" required placeholder="Enter you name"/>
              </div>
          </div>
          <div class="form-group" id="form-group">
			      <label class="control-label col-sm-2" id="label" for="country">Country:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="country" id="country" required placeholder="Enter your country"/>
              </div>
          </div>
          <div class="form-group" id="form-group">
            <label class="control-label col-sm-2" id="label" for="content">Message:</label>
              <div class="col-sm-10">
                <textarea name="content" class="form-control" id="content" required placeholder="Write your message here" rows="10"></textarea>
              </div>
          </div>
          <div class="form-group" id="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
               <input type="submit" class="btn btn-default" id="button" value="Send" />
            </div>
        </div>
        </form>
    </div>


    <script>
      // Attach a submit handler to the form
      $( "#searchForm" ).submit(function( event ) {
       
        // Stop form from submitting normally
        event.preventDefault();
       
        // Get some values from elements on the page:
        var $form = $( this ),
          term = $form.find( "input[name='title']" ).val(),
          term1 = $form.find( "input[name='country']" ).val(),
          term2 = $form.find( "textarea[name='content']" ).val(),
          url = $form.attr( "action" );
       
        // Send the data using post
        var posting = $.post( url, { title: term, country: term1, content: term2 } );
        console.log(term+term1+term2);
        alert("Your message is submitted!");
      });
      </script>



</body>

</html>